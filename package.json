{
  "name": "my-site",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://ericgi231.me",
  "scripts": {
    "dev": "concurrently \"npm run dev:node\" \"npm run dev:php\" \"npm run dev:react\"",
    "dev:node": "nodemon --config config/nodemon.json",
    "dev:php": "php -S localhost:8000",
    "dev:react": "wait-on tcp:3001 && vite",
    "build": "npm run clean && npm run build:frontend && npm run build:backend && npm run build:php && npm run build:configs",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.node.json",
    "build:php": "copyfiles -u 1 \"php-api/**/*\" dist/php-api",
    "build:configs": "npm run generate:lockfile && copyfiles -f node-api/package.json node-api/package-lock.json node-api/ecosystem.config.js dist/node-api",
    "generate:lockfile": "cd node-api && npm install --package-lock-only",
    "clean": "rimraf dist",
    "deploy": "npm run build && node scripts/deploy.js",
    "lint": "eslint . -c config/eslint.config.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.1",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "eslint-plugin-react": "^7.37.5",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "7.7.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ssh2": "^1.17.0",
    "ssh2-sftp-client": "^12.0.1",
    "styled-components": "6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  }
}
