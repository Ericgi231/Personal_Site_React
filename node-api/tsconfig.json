{
  "compilerOptions": {
    "outDir": "../dist/node-api",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "shared"]
}